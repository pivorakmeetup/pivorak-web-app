= content_for :main_body_class, "pk-body--green-bg"

.pk-container
  h2.main-header = 'Friends'
  .pk-supporter-wrapper.pk-grid.pk-grid--wrap
    - friends.each do |friend|
      = link_to friend.link, class: 'pk-supporter ', target: '_blank'
        .pk-supporter__image.pk-js-changed-color-images
          = image_tag friend.logo
        .pk-supporter__text = friend.description
