h2 = t 'members.plural'

= admin_new_member_link
= render 'admin/shared/search_bar', url: admin_members_path

.table-responsive
  table.table
    thead
      tr
        th = t 'words.id'
        th = t 'members.full_name'
        th = t 'words.email'
        th.status = t 'members.synthetic.singular'
        th.status = t 'members.verified'
        th

    tbody
      - members.each do |member|
        tr
          td = member.id
          td = admin_member_link(member)
          td = member.email
          td.status = bool_label(member.synthetic?)
          td.status = bool_label(member.verified?)
          td.actions = admin_edit_member_link(member)
